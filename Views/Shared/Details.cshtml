@model TechJobPortal.Models.JobListing

@{
    ViewData["Title"] = "Job Details";
}

<h2>@Model.Title</h2>

<p><strong>Company:</strong> @Model.CompanyName</p>
<p><strong>Location:</strong> @Model.Location</p>
<p><strong>Posted Date:</strong> @Model.PostedDate.ToString("MMM dd, yyyy")</p>

<label for="jobType"><strong>Job Type:</strong></label>
<select id="jobType" class="form-control" disabled>
    <option selected>@Model.JobType</option>
</select>

<a asp-action="Index" class="btn btn-primary mt-3">Back</a>
