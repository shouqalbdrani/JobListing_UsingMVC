@model List<TechJobPortal.Models.JobListing>

@{
    ViewData["Title"] = "Job Listings";
}

<h2 class="text-dark text-center">Job Listings</h2>

<form method="get" action="@Url.Action("Index", "Job")" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchQuery" class="form-control" placeholder="Search by title or company name..." value="@ViewBag.SearchQuery">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>  
            <th>Job Title</th>
            <th>Company Name</th>
            <th>Location</th>
            <th>Job Type</th>
            <th>Posted Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@job.Id">@job.Title</a></td>
                <td>@job.CompanyName</td>
                <td>@job.Location</td>
                <td>@job.JobType</td>
                <td>Posted on: @job.PostedDate.ToString("MMM dd, yyyy")</td>
            </tr>
        }
    </tbody>
</table>
